@model DriverEvent

<div>
    <h2 class="text-center mb-4">Add Event for Driver</h2>

    <!-- Form for adding a new event -->
    <form asp-action="AddEvent" method="post">
        <!-- Hidden input to include DriverID in the form -->
        <input type="hidden" asp-for="DriverID" />

        <div class="form-group">
            <label asp-for="NoteDate">Event Date</label>
            <input asp-for="NoteDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="NoteDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NoteDescription">Description</label>
            <input asp-for="NoteDescription" class="form-control" />
            <span asp-validation-for="NoteDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BeloppIn">Belopp In</label>
            <input asp-for="BeloppIn" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="BeloppIn" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BeloppUt">Belopp Ut</label>
            <input asp-for="BeloppUt" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="BeloppUt" class="text-danger"></span>
        </div>

        <!-- Submit button -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Add Event</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
