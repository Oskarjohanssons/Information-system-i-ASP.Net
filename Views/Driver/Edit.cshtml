@model Driver

<div>
    <h2 class="text-center mb-4">Edit Driver Details for @Model.DriverName</h2>

    <!-- Form for editing driver details -->
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="DriverID" />

        <div class="form-group">
            <label asp-for="DriverName">Driver Name</label>
            <input asp-for="DriverName" class="form-control" />
            <span asp-validation-for="DriverName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CarReg">Car Registration</label>
            <input asp-for="CarReg" class="form-control" />
            <span asp-validation-for="CarReg" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ResponsibleEmployee">Responsible Employee</label>
            <input asp-for="ResponsibleEmployee" class="form-control" />
            <span asp-validation-for="ResponsibleEmployee" class="text-danger"></span>
        </div>

        <!-- Button to submit the form -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
