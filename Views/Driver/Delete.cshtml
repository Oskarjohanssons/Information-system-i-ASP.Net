@model Driver

<div>
    <h2 class="text-center mb-4">Delete Driver</h2>


    <div class="driver-details text-center">
        <h4>@Model.DriverName</h4>
        <p>Car Registration: @Model.CarReg</p>
        <p>Responsible Employee: @Model.ResponsibleEmployee</p>
        <p>Total Belopp In: @Model.TotalBeloppIn</p>
        <p>Total Belopp Ut: @Model.TotalBeloppUt</p>
    </div>

    <form asp-action="Delete" asp-controller="Driver" method="post" class="text-center">
        <input type="hidden" asp-for="DriverID" />
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
